<!DOCTYPE html>
<html>
  <head>
    <title>Tahir Books Shop</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar nav navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', static_pages_landing_page_path %></li>
            <li><%= link_to 'About', static_pages_about_path %></li>
            <li><%= link_to 'Contact', static_pages_contact_path %></li>
            <li><%= link_to 'Products', products_path %></li>
            <li class="navbar-right">
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
            </li>
            <li class="navbar-right">
              <div class="navbar-form">
                <div class="form-group">
                  <%= form_tag("/products", method: "get") do %>
                    <%= text_field_tag(:q, nil, placeholder: "Search for", class: "form-control nav-input") %> 
                    <%= submit_tag("Search", class: "btn btn-default nav-form-btn") %>
                  <% end %>
                </div>
              </div>
            </li>
          </ul>
        </div><!-- end navbar-collapse -->
      </div><!-- end container-fluid -->
    </nav>

    <div class="container message-board">
      <% if notice %>
        <p id="notice" class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="alert" class="alert alert-info"><%= alert %></p>
      <% end %>
    </div>
  
    <%= yield %>

    <div class="footer-margin"></div>

    <footer>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-6 social-media">
            <div id="twitter-button">
              <a href="https://twitter.com/Tahir_Kalim" class="twitter-follow-button" data-show-count="false">Follow @Tahir_Kalim</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6" id="copyright"> 
            <p> Frankfurt am Main, 2017</p>
          </div>
        </div> <!-- end row -->
      </div> <!-- end container -->
    </footer>
  </body>
</html>
