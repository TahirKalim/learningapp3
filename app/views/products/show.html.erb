<div class="short-container">
 
  <div class="row">
    <h1><%= @product.name %></h1>

    <br>

    <div class="col-md-6">
      <%= image_tag(@product.image_url, class: "img-responsive show-prod") %>
    </div>

    <div class="col-md-6">

      <br>

      <p>
        <strong>Id:</strong>
        <%= @product.id %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <br>

      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
    </div>
  </div>

    <br>

    <h3>Ratings:</h3> 

    <br>

    <%= render partial: "new_comment" %>

    <br>

    <%= render partial: "comments" %>

    <div class="paginate-box">
      <%= will_paginate(@comments, :renderer => WillPaginate::ActionView::LinkRenderer) %>
    </div>


  <br>
  <% if signed_in? && current_user.admin? %>
 	  <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-danger product-button" %>
  <% end %>

 	<%= link_to 'Back', products_path, class: "btn btn-danger product-button" %>
</div>
