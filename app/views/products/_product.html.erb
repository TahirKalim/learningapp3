<div class="col-sm-6 col-md-4">
  <div class="product-card">
    <h3 class="product-title"><%= link_to product.name, product %> </h3>
    <%= link_to image_tag(product.image_url, class: "product-img img-responsive"), product, class: "thumbnail" %>
    <p><%= product.description%></p>
    <p><%= product.colour%></p>
    <p><%= product.price%>$</p>
    
    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(product), class: "btn card-button" %>
      <%= link_to 'Destroy', product, class: "btn card-button", method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>